
<!-- selected classroom view -->
<div class="container p-0 rounded">
  <div class="content">
    <div class="contact-profile container">
      <p><%= classroom.name %></p>
    </div>

    <div class="announcements">
      <ul class="list-inline-item">
        <% classroom.announcements.each do |announcement| %>
        <li id="announcement-<%= announcement.id %>" >
              <strong><%= announcement.title %></strong>
              <small><%= announcement.created_at.strftime("%a %b %e at %l:%M%p") %></small>
        </li>
        <% end %>
      </ul>
    </div>
    <div class="messages">
      <ul class="list-unstyled">
        <% classroom.messages.each do |message| %>
          <li id="message-<%= message.id %>" class="<%= message.user == current_user ? 'replies' : 'sent' %>">
            <i class="author">
              <strong><%= message.user.name %></strong>
              <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
            </i>
            <p><%= message.content %></p>

          </li>
        <% end %>
      </ul>
    </div>
    <div class="message-input">
      <div class="wrap">
        <%= simple_form_for [ @classroom, @message ], remote: true do |f| %>
          <div class="chat-footer d-flex ">
              <%= f.input :content, label: false, placeholder: "Message # #{@classroom.name}" %>
              <%= f.submit "Send", class: 'btn btn-primary chat-input' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
