  <div class="content">
    <div class="contact-profile container">
      <p><%= classroom.name %></p>
    </div>
    <div class="messages">
      <ul class="list-unstyled">
        <% classroom.messages.each do |message| %>
          <li id="message-<%= message.id %>" class="<%= message.user == current_user ? 'sent' : 'replies' %>">
            <p><%= message.content %></p>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="message-input">
      <div class="wrap">
      <input type="text" placeholder="Write your message..." />
      <button class="submit"><i class="fa fa-paper-plane" aria-hidden="true"></i></button>
      </div>
    </div>
  </div>
