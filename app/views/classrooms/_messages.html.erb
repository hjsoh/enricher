<div class="container sticky-top bg-primary">
  <h3 style="color:white">#<%= classroom.name %></h3>
</div>

<div class="message-container" id="messages" data-classroom-id="<%= classroom.id %>">

  <% classroom.messages.each do |message| %>
    <div class="container" id="message-<%= message.id %>">
      <i class="author">
        <strong><%= message.user.name %></strong>
        <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
      </i>
      <p><%= message.content %></p>
    </div>
  <% end %>

</div>

