<!-- announcements card -->
<div class="col-sm-4">
  <div class="card card-select">
    <%= link_to announcements_path, class: 'cardlink' do %>
      <div class="card-body d-flex">
        <div class="col">
          <h1 class="display-5"><i class="fas fa-bullhorn"></i></h1>
        </div>
        <div class="col">
          <div class="row">
            <h4><%= @classroom.announcements.count %></h4>
          </div>
          <div class="row">
            <small>Announcements</small>
          </div>
        </div>
        <div class="col">
        </div>
      </div>
    <% end %>
  </div>
</div>
<!-- tickets card -->
<div class="col-sm-4">
  <div class="card card-select">
    <%= link_to tickets_path, class: 'cardlink' do %>
      <div class="card-body d-flex">
        <div class="col">
          <h1 class="display-5 pl-2"><i class="fas fa-hand-paper"></i></h1>
        </div>
        <div class="col">
          <div class="row">
            <h4><%= @classroom.tickets.count %></h4>
          </div>
          <div class="row">
            <small>Tickets</small>
          </div>
        </div>
        <div class="col">
        </div>
      </div>
    <% end %>
  </div>
</div>
<!-- enrollments card -->
<div class="col-sm-4">
  <div class="card card-select">
    <%= link_to roster_classroom_path(@classroom), class: 'cardlink' do %>
      <div class="card-body d-flex">
        <div class="col">
          <h1 class="display-5"><i class="fas fa-users"></i></h1>
        </div>
        <div class="col">
          <div class="row">
            <h4><%= @classroom.students.where(is_active: true).count %></h4>
          </div>
          <div class="row">
            <small>Students</small>
          </div>
        </div>
        <div class="col">
        </div>
      </div>
    <% end %>
  </div>
</div>
