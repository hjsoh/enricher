<div class="col-sm-4">
    <div class="card">
      <%= link_to roster_classroom_path(@classroom), class: 'cardlink' do %>
        <div class="card-body d-flex">
          <div class="col">
            <h4 class="display-5 pl-2"><i class="fas fa-user-graduate"></i></h4>
          </div>
          <div class="col-3">
            <h5><%= @classroom.enrollments.count %></h5>
          </div>
          <div class="col-9">
          </div>
        </div>
      <% end %>
    </div>
  </div>
