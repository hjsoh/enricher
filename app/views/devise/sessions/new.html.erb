<div class="container d-flex mh-100">
  <div class="container text-center">
    <h2 style="font-size:20px;">enri'CHER dashboard</h2>
    <p><em style="font-size:10px;">Manage all your educational matters smarter</em></p>
    <%= image_tag('login_page.png', class:"signin-img") %>
  </div>
  <div class="container">
    <h2>Sign in to enri'CHER</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class:"btn btn-primary btn-block" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
