<div class="container-fluid p-3">
  <div class="row p-2">
    <div class="col">
      <h1 class=text-primary><%= @teacher.name %>'s Dashboard</h1>
    </div>
  </div>
  <!-- CLASSROOM INFO -->
  <div class="row">
    <%= render partial: 'info' %>
  </div>
  <!-- ANNOUNCEMENTS -->
  <div class="row p-3">
    <div class="col card">
      <h4 class="p-2 info-header">Latest Announcements:</h4>
      <div class="section-scroll">
        <% if @teacher_announcements.empty? %>
          <h3>--no announcements--</h3>
        <% else %>
          <%= render partial: 'announcements/announcement', locals: { announcements: @teacher_announcements } %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row px-3">
  <!-- TICKETS -->
    <div class="col-12 col-sm-6 card py-2">
      <h4 class="p-2 info-header">Latest Tickets:</h4>
      <div class="section-scroll">
        <% if @teacher_tickets.empty? %>
          <h3>--no outstanding tickets--</h3>
        <% else %>
          <%= render partial: 'tickets/ticket', locals: { tickets: @teacher_tickets } %>
        <% end %>
      </div>
    </div>
  <!-- APPOINTMENTS -->
    <div class="col-12 col-sm-6 card py-2">
      <h4 class="p-2 info-header">Upcoming Appointments:</h4>
      <div class="section-scroll">
        <% if @teacher_appointments.empty? %>
          <h3>--no upcoming appointments--</h3>
        <% else %>
          <%= render partial: 'appointments/appointment', locals: { appointments: @teacher_appointments } %>
        <% end %>
      </div>
    </div>
  </div>
</div>
