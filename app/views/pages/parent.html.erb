<div class="container-fluid">
  <div class="row p-2">
    <div class="col">
      <h1 class=text-primary><%= @parent.name %>'s Dashboard</h1>
    </div>
  </div>
  <!-- CLASSROOM INFO -->
  <div class="row">
    <%= render partial: 'info' %>
  </div>
  <!-- ANNOUNCEMENTS -->
  <div class="row p-3">
    <div class="col card">
      <h4 class="p-2 info-header">Latest Announcements:</h4>
      <div class="section-scroll">
        <div class="section-scroll">
          <% if @parent_announcements.empty? %>
            <h3>--no announcements--</h3>
          <% else %>
            <%= render partial: 'announcements/announcement', locals: { announcements: @parent_announcements } %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row px-3">
  <!-- TICKETS -->
    <div class="col-lg-6 card py-2">
      <h4 class="p-2 info-header">Latest Tickets:</h4>
      <div class="section-scroll">
        <% if @parent_tickets.empty? %>
          <h3>--no outstanding tickets--</h3>
        <% else %>
          <%= render partial: 'tickets/ticket', locals: { tickets: @parent_tickets } %>
        <% end %>
      </div>
    </div>
  <!-- APPOINTMENTS -->
    <div class="col-lg-6 card py-2">
      <h4 class="p-2 info-header">Upcoming Appointments:</h4>
      <div class="section-scroll">
        <% if @parent_appointments.empty? %>
          <h3>--no upcoming appointments--</h3>
        <% else %>
          <%= render partial: 'appointments/appointment', locals: { appointments: @parent_appointments } %>
        <% end %>
      </div>
    </div>
  </div>
</div>
