<!-- classrooms card -->
<div class="col-sm-4">
  <div class="card card-select">
    <%= link_to classrooms_path, class: 'cardlink' do %>
      <div class="card-body d-flex">
        <div class="col">
          <h1 class="display-5"><i class="fas fa-chalkboard-teacher"></i></h1>
        </div>
        <div class="col">
          <div class="row">
            <h4>
              <% if current_user.role == 'teacher' %>
                <%= @teacher_classrooms.count %>
              <% else %>
                <%= @parent_classrooms.count %>
              <% end %>
            </h4>
          </div>
          <div class="row">
            <small>Classrooms</small>
          </div>
        </div>
        <div class="col text-right">
          <i class="far fa-question-circle" data-toggle="tooltip" data-placement="right" title="<%= current_user.role == 'teacher' ? "Number of classes you are teaching" : "Number of classes your child is enrolled in" %>"></i>
        </div>
      </div>
    <% end %>
  </div>
</div>
