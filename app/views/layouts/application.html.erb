<!DOCTYPE html>
<html>
  <head>
    <title>Enricher</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,600;0,700;0,800;1,300;1,400;1,600;1,700;1,800&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>
    <%= render 'shared/flashes' %>
    <% if user_signed_in? %>
      <div class="d-flex">
        <%= render 'shared/sidebar' %>
        <div class="container-fluid px-0">
          <%= render 'shared/searchbar' %>
          <%= yield %>
        </div>
      </div>
    <% end %>
    <%#= render 'shared/navbar' if user_signed_in? && current_user.role == "parent" %>
    <%#= render 'shared/footer' if user_signed_in? && current_user.role == "parent" %>

      <%#= render 'shared/sidebar' if user_signed_in? && current_user.role == "teacher" %>
      <!-- <div class="container-fluid px-0"> -->
        <%#= render 'shared/searchbar' if user_signed_in? && current_user.role == "teacher" %>
  </body>
</html>
