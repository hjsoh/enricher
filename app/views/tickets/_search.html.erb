<div class="container">
  <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
    <h2>Search tickets by name</h2>

    <%= simple_form_for :search, method: "get" do |f| %>
      <%= f.association :user, collection: User.order(:name), prompt: "Find tickets associated with the user" %>
      <%= f.button :submit, "Go", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
