<% announcements.each do |anc| %>
  <div class="card mt-2 mb-2">
    <div class="card-body">
      <div class="row">
        <div class="col-12 col-lg-8">
          <h5 class="card-title"><%= anc.title %></h5>
        </div>
        <div class="col-12 col-lg-4">
          <small class="text-muted">Posted at <%= anc.created_at %></small>
        </div>
      </div>
        <p class="card-text"><%= anc.content %></p>
    </div>
    <div class="card-footer">
      <small class="text-muted">Posted in:
        <% anc.classroom_announcements.each do |x| %>
          <li class="list-inline-item"><%= x.classroom.name %></li>
        <% end %>
      </small>
      <small class="text-muted">
        <%= link_to announcement_path(anc), method: :delete, data: { confirm: "Are you sure?" } do %>
          <i class="fas fa-trash"></i>
        <% end %>
      </small>
    </div>
  </div>
<% end %>
